{
  "manifest_version": 3,
  "name": "喝水提醒小助手",
  "version": "1.0",
  "description": "一个可爱的插件，用随机文案提醒你喝热水或开水。",
  "permissions": ["alarms", "notifications","storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}